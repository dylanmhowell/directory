---
import Icon, { Props as IconProps } from "./Icon.astro";
export interface Props {
  name: string;
  domain: string;
  about: string;
  image: string;
}
const { name, domain, image, about } = Astro.props as Props;
---

<div class="max-w-sm w-full lg:max-w-full lg:flex">
  <div
    class="h-48 lg:h-auto lg:w-48 flex-none bg-cover rounded-t lg:rounded-t-none lg:rounded-l text-center overflow-hidden"
    style={`background-image: url("${image}")`}
  >
  </div>
  <div
    class="border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal"
  >
    <div class="mb-8">
      <p class="text-sm text-gray-600 flex items-center">
        <Icon
          icon="camera"
          color="var(--accent-regular)"
          size="1.9em"
          gradient
        />
      </p>
      <div class="text-gray-900 font-bold text-xl mb-2">{name}</div>
      <p class="text-gray-700 text-base">{about}</p>
    </div>
    <div class="flex items-center">
      <p class="text-gray-600">{domain}</p>
    </div>
  </div>
</div>

<style>
  .card {
    background: #fff;
    padding: 20px;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    margin-bottom: 20px;
  }
</style>
